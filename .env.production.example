# =============================================================================
# Valerie Supplier Chatbot - Production Environment Variables
# =============================================================================
# Copy this file to .env.production and fill in your values
# NEVER commit .env.production to version control
# =============================================================================

# -----------------------------------------------------------------------------
# Environment
# -----------------------------------------------------------------------------
VALERIE_ENV=production

# -----------------------------------------------------------------------------
# LLM Provider Configuration
# -----------------------------------------------------------------------------
# Primary provider: anthropic | groq | ollama | bedrock | azure_openai | lightllm
VALERIE_LLM_PROVIDER=anthropic
VALERIE_USE_PAID_LLM=true

# Anthropic (Claude)
VALERIE_ANTHROPIC_API_KEY=sk-ant-xxx

# Groq (Free tier available)
VALERIE_GROQ_API_KEY=gsk_xxx

# Ollama (Local - for development/testing)
VALERIE_OLLAMA_BASE_URL=http://ollama:11434

# AWS Bedrock
AWS_ACCESS_KEY_ID=AKIAXXXXXXXXXXXXXXXX
AWS_SECRET_ACCESS_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
AWS_DEFAULT_REGION=us-east-1

# Azure OpenAI
AZURE_OPENAI_API_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com
AZURE_OPENAI_API_VERSION=2024-02-15-preview
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4-turbo

# LightLLM (Self-hosted GPU cluster)
LIGHTLLM_BASE_URL=http://lightllm:8000
LIGHTLLM_API_KEY=optional-api-key

# -----------------------------------------------------------------------------
# Session Storage (Redis)
# -----------------------------------------------------------------------------
VALERIE_SESSION_STORE=redis
VALERIE_SESSION_REDIS_URL=redis://redis:6379
VALERIE_SESSION_TTL=3600
VALERIE_SESSION_PREFIX=valerie:session:

# -----------------------------------------------------------------------------
# Oracle Fusion Cloud Integration
# -----------------------------------------------------------------------------
VALERIE_ORACLE_BASE_URL=https://your-instance.oraclecloud.com
ORACLE_CLIENT_ID=your-client-id
ORACLE_CLIENT_SECRET=your-client-secret

# -----------------------------------------------------------------------------
# Security - JWT Authentication
# -----------------------------------------------------------------------------
# Generate with: openssl rand -hex 32
JWT_SECRET_KEY=your-256-bit-secret-key-here-generate-with-openssl
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=60

# -----------------------------------------------------------------------------
# Rate Limiting
# -----------------------------------------------------------------------------
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10

# -----------------------------------------------------------------------------
# Observability - Tracing
# -----------------------------------------------------------------------------
# LangSmith (Development) - Leave empty in production
LANGCHAIN_TRACING_V2=false
LANGCHAIN_API_KEY=
LANGCHAIN_PROJECT=

# Langfuse (Production) - Self-hosted or cloud
LANGFUSE_PUBLIC_KEY=pk-lf-xxx
LANGFUSE_SECRET_KEY=sk-lf-xxx
LANGFUSE_HOST=http://langfuse-server:3000

# -----------------------------------------------------------------------------
# Observability - Metrics
# -----------------------------------------------------------------------------
PROMETHEUS_MULTIPROC_DIR=/tmp/prometheus_multiproc

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO
LOG_FORMAT=json

# -----------------------------------------------------------------------------
# API Configuration
# -----------------------------------------------------------------------------
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# CORS (comma-separated origins)
CORS_ORIGINS=https://your-frontend.com,https://admin.your-frontend.com

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
FEATURE_HITL_ENABLED=true
FEATURE_ITAR_MODE=true
FEATURE_STREAMING_ENABLED=true
