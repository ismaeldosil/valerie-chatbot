# Valerie Supplier Chatbot Configuration
# Copy this file to .env and fill in your values

# ============================================================
# LLM Provider Configuration (v2.5 - Multi-LLM Support)
# ============================================================
#
# IMPORTANT: Model names are centralized in config/model-registry.yaml
# Edit that file to change which models are used for each agent/tier.
# The variables below override the registry defaults when set.
#
# In Python code, use:
#   from valerie_supplier_chatbot.models import get_model_registry
#   registry = get_model_registry()
#   model = registry.get_model_for_agent("orchestrator")
#
# ============================================================

# Choose your LLM provider: ollama (free local), groq (free cloud), anthropic (paid)
VALERIE_LLM_PROVIDER=ollama

# Fallback chain if primary provider fails (comma-separated)
VALERIE_LLM_FALLBACK=ollama,groq,anthropic

# --- Ollama (Local LLM - FREE) ---
# Install: curl -fsSL https://ollama.com/install.sh | sh
# Pull model: ollama pull llama3.2
VALERIE_OLLAMA_BASE_URL=http://localhost:11434
# Model name: leave empty to use model-registry.yaml default, or set to override
# VALERIE_OLLAMA_MODEL=llama3.2

# --- Groq (Cloud LLM - FREE TIER) ---
# Get API key: https://console.groq.com/
# Free: 30 req/min, 14,400 req/day
VALERIE_GROQ_API_KEY=
# VALERIE_GROQ_MODEL=llama-3.3-70b-versatile

# --- Anthropic (Cloud LLM - PAID) ---
# Get API key: https://console.anthropic.com/
VALERIE_ANTHROPIC_API_KEY=
# Model name: leave empty to use model-registry.yaml default, or set to override
# VALERIE_MODEL_NAME=claude-sonnet-4-20250514

# ============================================================
# LLM Generation Settings (optional)
# ============================================================
VALERIE_TEMPERATURE=0.1
VALERIE_MAX_TOKENS=4096

# Redis Configuration (optional, for session persistence)
VALERIE_REDIS_URL=redis://localhost:6379
VALERIE_SESSION_TTL_SECONDS=3600

# Oracle Fusion Configuration (optional, uses mock server by default)
VALERIE_ORACLE_BASE_URL=http://localhost:3000
VALERIE_ORACLE_CLIENT_ID=test
VALERIE_ORACLE_CLIENT_SECRET=test

# Guardrails Configuration (optional)
VALERIE_PII_DETECTION_ENABLED=true
VALERIE_ITAR_DETECTION_ENABLED=true
VALERIE_MAX_INPUT_LENGTH=5000

# Human-in-the-Loop Configuration (optional)
VALERIE_HITL_ENABLED=true
VALERIE_HITL_TIMEOUT_MS=86400000
VALERIE_HIGH_RISK_THRESHOLD=0.7
VALERIE_LOW_CONFIDENCE_THRESHOLD=0.6

# Observability (optional)
VALERIE_LANGSMITH_API_KEY=
VALERIE_LANGSMITH_PROJECT=valerie-supplier-chatbot
VALERIE_TRACING_ENABLED=true

# Fallback Configuration (optional)
VALERIE_CIRCUIT_BREAKER_THRESHOLD=5
VALERIE_CIRCUIT_BREAKER_TIMEOUT_SECONDS=60
VALERIE_MAX_RETRIES=3

# Evaluation (optional)
VALERIE_EVALUATION_ENABLED=true
VALERIE_EVALUATION_SAMPLE_RATE=0.1
